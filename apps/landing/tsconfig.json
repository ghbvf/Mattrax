{
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"outDir": "./dist",
		"noEmit": true,
		"jsx": "preserve",
		"jsxImportSource": "solid-js",
		"types": ["vinxi/client", "vite/client", "@mattrax/ui/types"],
		"paths": {
			"~/*": ["./src/*"],
			"content-collections": ["./.content-collections/generated"]
		}
	},
	"include": ["src/"],
	"exclude": ["node_modules", "dist"],
	"references": [{ "path": "../../packages/ui" }]
}
