{
	"$schema": "https://biomejs.dev/schemas/1.7.3/schema.json",
	"files": {
		"include": [
			"apps/*/src/**",
			"apps/*/*",
			"packages/*/src/**",
			"packages/*/*",
			"*"
		],
		"ignore": [
			".next",
			"auto-imports.d.ts",
			"node_modules",
			"dist",
			"apps/android",
			".sst",
			"configuration-schemas/**/*.json",
			"sst-env.d.ts",
			"tsconfig.app.json",
			"indexed-db-observers-polyfill.js"
		]
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noExplicitAny": "off",
				"noAssignInExpressions": "off",
				"noConfusingVoidType": "off"
			},
			"style": {
				"noNonNullAssertion": "off",
				"noUselessElse": "off"
			},
			"correctness": {
				"useJsxKeyInIterable": "off"
			},
			"complexity": {
				"noForEach": "off"
			}
		}
	},
	"formatter": {
		"indentStyle": "tab"
	},
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true,
		"defaultBranch": "main"
	}
}
